verde = #9FD8D2
verde2 = #459F83
verde3 = #A2B87A
gris = #57646D
gris2 = #E6E7E9
azul = #36B0E3
.verde3
	color verde3
.verde2
	color verde2
.verde
	color verde
.azul
	color azul
a
	color azul
img
	padding 0
.inner-logo
	margin-top -50px
.text-center.login
	margin-top -70px
.handlee
	font-family 'Handlee', cursive
body
	background #F2F2F2
	font-family 'Source Sans Pro', sans-serif
.navbar-default
	background-color rgba(verde,.8)
	border-color verde
	.navbar-toggle
		border none
		&:focus
			background rgba(verde2, .7)
		&:hover
			background rgba(verde2, .2)
			
		.icon-bar
			background-color white
			height 4px
			width 36px
	.navbar-nav>li>a
		color white
.navbar
	margin-bottom 0
.navbar-brand
	overflow hidden
	img
		height auto
		margin-top -40px
		width 100px
.main-banner
	.item
		background transparent url(../../images/banner.jpg) no-repeat center top
		color white
		height 300px
		padding 183px 30px 0 30px
		.title
			font-size 2.2em
.last-uploaded-item
	background white
	margin 20px 0
	padding 0
	figure
		display inline-block
		margin 0
		padding 0
		vertical-align top
		width 49%
		img
			height auto
			width 100%
	.info
		display inline-block
		padding 10px
		width 50%
.container-fluid.search
	background-color white
	margin-top 40px
	padding-bottom 50px
	padding-top 50px
.container.form
	background gris2
	padding-bottom 30px
	padding-top 30px
	.search-title
		font-size 2em
	.btn.btn-primary
		background verde
		border-color verde
		font-size 1.4em
		width 100%
/*ABOUT US*/
.about-us
	iframe
		display block
		height auto
		overflow hidden
		width 100%
.about-us-images
	padding-bottom 40px
	img
		height auto
		margin-top 20px
		width 100%
/*Notice*/
.privacy-notice
	padding-bottom 40px
	padding-top 40px
/*Login*/
.form-control
	border-radius 0
	border-color #D9D9D9
.btn.btn-primary.login
	width 100%
	background-color verde
	border-radius 0
	border-color verde
footer
	background-color gris
	color white
	padding-bottom 30px
	padding-top 30px
	.contact
		color verde2
		font-size 2.8em
	a
		color verde3
@media screen and (min-width:480px)
	.last-uploaded-item
		.info
			padding 10px 20px
			.title
				margin-bottom 20px
	/*ABOUT US*/
	.about-us
		iframe
			height auto
			min-height 260px
			width 100%
@media screen and (min-width:768px)
	h1
		font-size 3em
		margin 40px 0
	.last-uploaded-item
		background transparent
		background white
		margin 0
		padding 0
		.item-container
			background white
			margin 0 auto
			overflow hidden
			width 90%
		figure
			display block
			width 100%
		.info
			display block
			height 150px
			overflow hidden
			width 100%
	/*ABOUT US*/
	.about-us
		iframe
			height auto
			width 100%